<core:FragmentDefinition xmlns:core="sap.ui.core"    
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m">
    <Panel>        
        <form:SimpleForm editable="true" >
            <Label id="labelFirstName" labelFor="inputFirstName" text="{i18n>textFirstName}" required="true" />
            <Input id="inputFirstName" maxLength="40" value= "{dataEmployeesModel>/FirstName}"/>

            <Label id="labelLastName" labelFor="inputLastName" text="{i18n>textLastName}" required="true"/>
            <Input id="inputLastName" maxLength="40" value= "{dataEmployeesModel>/LastName}"/>            
            
            <Label id="labelDni" labelFor="inputDni" required="true" visible="true"  
                   text="{= ${dataEmployeesModel>/Type}==='1' ? ${i18n>textCif} 
                          : ${i18n>textDni}}"/>
            <Input id="inputDni" maxLength="20" liveChange=".onValidateDni" value="{dataEmployeesModel>/Dni}" 
                   valueState="{dataEmployeesModel>/DniState}"/>                        
            
            <Label id="labelAmount" labelFor="inputAmount" visible="true"                   
                   text="{= ${dataEmployeesModel>/Type}==='1' ? ${i18n>textAmountP} 
                          : ${i18n>textAmountS}}"/>
		    <Slider id="inputAmount" enableTickmarks="true" class="sapUiLargeMarginBottom" width="100%"
                    min="{= ${dataEmployeesModel>/Type}==='0' ? 12000 : 
                            ${dataEmployeesModel>/Type}==='1' ? 100 : 50000}"
                    max="{= ${dataEmployeesModel>/Type}==='0' ? 80000 : 
                            ${dataEmployeesModel>/Type}==='1' ? 2000  : 200000}"   
                    value="{= ${dataEmployeesModel>/Type}==='0' ? 24000 : 
                              ${dataEmployeesModel>/Type}==='1' ? 400 : 70000}"
                    step="{= ${dataEmployeesModel>/Type}==='0' ? 1000 : 
                             ${dataEmployeesModel>/Type}==='1' ? 80   : 10000}" />     

            <Label id="labelDaeCreation" labelFor="inputDateCreation" text="{i18n>textDateCreation}" required="true"/>
            <DatePicker id="inputDateCreation" dateValue= "{dataEmployeesModel>/DataCreation}" change="updateCreationDate" 
                        valueState="{dataEmployeesModel>/CreationDateState}"/>
        </form:SimpleForm>            
    </Panel>
</core:FragmentDefinition>