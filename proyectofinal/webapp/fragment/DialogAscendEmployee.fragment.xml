<core:FragmentDefinition xmlns:control="sap.gantt.control"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form">
    <Dialog title="{i18n>textAscendEmployee}">
        <content>
            <form:SimpleForm editable="true">
                <Label id="idTextSalary" labelFor="idSalaryEmployee" text="{i18n>textSalary}" required="true" />
                <Input id="idSalaryEmployee"                        
                       change="dialogValidation" 
                       placeholder="{i18n>textSalary}" 
                       value="{employeesModel>/valueAmount}" 
                       valueState="{employeesModel>/valueAmountStatus}" />
                <Label text="{i18n>textDate}" required="true" />
                <DatePicker dateValue="{employeesModel>/valueCreationDate}" 
                            change="dialogValidation" 
                            displayFormat="long" 
                            valueState="{employeesModel>/valueCreationDateStatus}"/>
                <Label text="{i18n>textComments}" required="true" />
                <TextArea value="{employeesModel>/valueComments}" rows="4" width="8cm" />
            </form:SimpleForm>
        </content>
        <Bar>
            <contentRight>
                <Button text="{i18n>textDialogA}" press="acceptAscend" />
                <Button text="{i18n>textDialogC}" press="cancelAscend" />
            </contentRight>
        </Bar>
    </Dialog>
</core:FragmentDefinition>   