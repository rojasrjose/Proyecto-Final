   <mvc:View controllerName="proyectofinal.proyectofinal.controller.Revision"  
   	xmlns:mvc="sap.ui.core.mvc"
    xmlns:u="sap.ui.unified"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
        <NavContainer id="revisionView">
            <pages>
                <Page title="{i18n>wizardTitle}" showHeader="true">                    
                    <Page id="idRevisionPage" title="{i18n>textResumen}" showHeader="true">                    
                        <content>
                            <core:Fragment fragmentName="proyectofinal.proyectofinal.fragment.Revision" type="XML"/>                       
                        </content>
                        <footer>
                            <Toolbar>
                                <ToolbarSpacer />
                                    <Button text="{i18n>cancelCreation}" press="onCancelWizard" class="sapUiTinyMarginBegin"/>
                                </Toolbar>
                        </footer>
                    </Page>
                </Page>
            </pages>
        </NavContainer> 
</mvc:View>    