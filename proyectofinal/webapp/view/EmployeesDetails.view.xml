<mvc:View xmlns:semantic="sap.m.semantic" xmlns:vbm="sap.ui.vbm" controllerName="proyectofinal.proyectofinal.controller.EmployeesDetails"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page title="{i18n>detalilsEmployees}">
        <Panel >
            <FlexBox height="70px" alignItems="Start">
                <items>
                    <core:Icon src="sap-icon://employee" size="50px" class = "sapUiTinyMarginBeginEnd"/>
                    
                    <VBox>
                        <Text text= "{dataEmployeesModel>LastName} {dataEmployeesModel>FirstName}" class="boldText sapUiTinyMarginBeginEnd"/>
                        <Text text= "{dataEmployeesModel>Dni}" class= "sapUiTinyMarginBeginEnd"/>
                    </VBox>
                </items>
            </FlexBox>

            <FlexBox height="30px" alignItems="Start" justifyContent="SpaceBetween">
                <items>
                    <HBox>
                        <Text text= "{i18n>textDateCreation}:" class= "sapUiTinyMarginBeginEnd"/>
                        <Text text= "{path : 'dataEmployeesModel>CreationDate', formatter: '.Formatter.dateFormat' }"/>
                    </HBox>
                    <HBox >
                        <Text text= "{i18n>textComments}:" class= "sapUiTinyMarginBeginEnd"/>
                        <Text text= "{dataEmployeesModel>Comments}"/>
                    </HBox>
                </items>
            </FlexBox>

            <FlexBox alignItems="Start" justifyContent="SpaceBetween">
                <items>
                    <HBox >
                        <Text text= "{i18n>typeEmployees}:" class= "sapUiTinyMarginBeginEnd"/>                         
                        <Text text="{= ${dataEmployeesModel>Type}==='0' ? ${i18n>typeInterno} :
                                       ${dataEmployeesModel>Type}==='1' ? ${i18n>typeAutonomo}  : ${i18n>typeGerente}}"/>
                    </HBox>
                </items>
            </FlexBox>

        </Panel>

        <Panel >
            <content>
                <IconTabBar >
                    <items>                    
                        <IconTabFilter text= "{i18n>fichero}" icon="sap-icon://attachment" design="Horizontal" ></IconTabFilter>
                        <IconTabFilter text= "{i18n>historial}" icon="sap-icon://money-bills" design="Horizontal" ></IconTabFilter>                        
                    </items>
                </IconTabBar>
            </content>    
        </Panel>
    </Page>
</mvc:View>           